<p><%= @errors if @errors %></p>
<div id="login">
  <form id="login-form" action="/login" method="post">
    Player 1: <input type="text" name="email_one" placeholder="Enter your email">
    <input type="password" name="password_one" placeholder="Enter your password"><br>
    Player 2: <input type="text" name="email_two" placeholder="Enter your email">
    <input type="password" name="password_two" placeholder="Enter your password"><br>
    <input type="submit" value="Let the games begin">
  </form>
</div>
<br>
<div id="name">
  <button id="signup-button">Sign up!</button>
  <form id="signup-form" action="/signup" method="post">
    <input type="text" name="user[name]" placeholder="Enter your name">
    <input type="text" name="user[email]" placeholder="Enter your email">
    <input type="password" name="user[password]" placeholder="Enter your password">
    <input type="submit" value="Sign up">
  </form>
</div>
